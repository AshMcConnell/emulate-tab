{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "paths": {
      "tslib": ["node_modules/tslib"],
      "emulate-tab": ["../../dist/emulate-tab.js"]
    },
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
